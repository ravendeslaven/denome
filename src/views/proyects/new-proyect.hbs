<div class="col-md-8 mx-auto">
  <div class="card text-center bg-dark text-white">
    <div class="card-header">
      <h3>New Proyect</h3>
    </div>
    <div class="card-body">
      <form action="/proyects/new-proyect" method="POST">
        <div class="form-group">
          <input type="text" name="name" class="form-control text-white" placeholder="Name" autofocus />
        </div>
        <div class="form-group">
          <a class="btn btn-primary" href="/calendars">
            Calendars
            {{#each calendarsUser}}
              <ul class="list-group bg-dark">
                <li class="list-group-item black-text bg-dark">
                  <input class="form-check-input me-1 black-text" type="checkbox" name="calendars" value="{{_id}}" aria-label="">
                  {{title}}
                </li>
              </ul>
            {{/each}}
          </a>
          <a class="btn btn-primary" href="/calendars">
            Posts
            {{#each postsUser}}
              <ul class="list-group bg-dark">
                <li class="list-group-item black-text bg-dark">
                  <input class="form-check-input me-1 black-text" type="checkbox" name="posts" value="{{_id}}" aria-label="">
                  {{title}}
                </li>
              </ul>
            {{/each}}
          </a>
          <a class="btn btn-primary" href="/calendars/new-calendar">
            New Calendar
          </a>
          <a class="btn btn-primary" href="/posts/add">
            New Post
          </a>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control text-white" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="row">
  {{#each proyects }}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body bg-dark">
        <h4 class="text-warning card-title d-flex justify-content-between align-items-center">
          Proyect: <a class="text-warning bg-dark" href="/proyects/view/{{_id}}"><strong>{{ this.name }}</strong></a>
        </h4>
        <br>
        <h4 class="text-warning">Calendars</h4>
        <p class="text-white">
          {{ calendars }}
        </p>
        <h4 class="text-warning">Posts</h4>
        <p class="text-white">
          {{ posts }}
        </p>
        <h4 class="text-warning">Description</h4>
        <p class="text-white">
          {{ description }}
          </p>
        <form action="/proyects/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{name}}</h1>
      <p clsss="lead">There are not Proyects yet.</p>
      <a href="/proyects/new-proyect" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>

<div class="row">
  {{#each calendarsUsers }}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }}
        </h4>
        <p>{{ color }} </p>
        <p> {{ start }} </p>
        <p> {{ end }} </p>
        <p> {{ user.name }} </p>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{ name }}</h1>
      <p clsss="lead">There are not Calendars yet.</p>
      <a href="/calendars/new-calendar" class="btn btn-success btn-block">Create One!</a>
    </div>
  </div>
  {{/each}}
</div>